syntax on
set number
set autoindent
set smartindent
set textwidth=100
" set runtimepath^=~/.vim/bundle/ctrlp.vim
set shell=/usr/bin/zsh
set background=dark

let g:AutoPairsMapCh = 0

call plug#begin()

Plug 'cocopon/iceberg.vim'
Plug 'jiangmiao/auto-pairs'
Plug 'junegunn/fzf'

call plug#end()

colorscheme iceberg
hi Normal guibg=NONE ctermbg=NONE

" In insert or command mode, move normally by using Ctrl
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
cnoremap <C-h> <Left>
cnoremap <C-j> <Down>
cnoremap <C-k> <Up>
cnoremap <C-l> <Right>
